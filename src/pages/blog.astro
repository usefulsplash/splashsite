---
import Layout from "../layouts/Layout.astro"
import { formatDate } from "../utils/date";

const allPosts = Object.values(import.meta.glob('./posts/*.md', { eager: true }));
---
<Layout title={"blog"}>
    <main>
	<section>
	    <ul>
		{allPosts.map((post: any) => <li><a href={post.url} class="text-base text-ef-aqua">{post.frontmatter.title}</a></li>)}
	    </ul>
	</section>
    </main>
</Layout>
