---
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import "../styles/global.css";

export interface Props {
  title?: string;
}

const { title = "Default" } = Astro.props as Props;
---

<!DOCTYPE html>
<html lang="en" class="bg-ef-bg text-ef-fg flex flex-col min-h-screen justify-center items-center">
    <head>
	<meta charset="UTF-8" />
	<meta http-equiv="X-UA-Compatible" content="IE=edge" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>{title}</title>
    </head>
    <body class="font-mono max-w-[60em] px-[1em] py-[2em] text-sm min-[480px]:px-[7em]">
	<Header />
	<slot />
	<Footer />
    </body>
</html>
