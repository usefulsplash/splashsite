---
import Footer from "../components/Footer.astro";
import "../styles/global.css";

export interface Props {
  title?: string;
}

const { frontmatter } = Astro.props;

const dateOptions: object = {
    month: "short",
    day: "numeric",
    year: "numeric",
};

const formattedPublishDate = new Date(frontmatter.pubDate).toLocaleDateString("en-US", dateOptions);
---
<!DOCTYPE html>
<html lang="en" class="bg-ef-bg text-ef-fg">
    <head>
	<meta charset="UTF-8" />
	<link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
	<link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
	<link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
	<link rel="manifest" href="/site.webmanifest">
	<meta http-equiv="X-UA-Compatible" content="IE=edge" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>{frontmatter.title}</title>
    </head>
    <body class="font-mono max-w-[60em] px-[1em] py-[2em] text-sm min-[480px]:p-[7em]">
	<section class="pb-12">
	    <a href="/blog" class="font-extralight hover:text-ef-red"><p>â¤¶ Back</p></a>
	</section>
	<section class="flex flex-col space-y-3">
	    <h1 class="text-ef-green text-base">{frontmatter.title}</h1>
	    <p class="text-ef-orange font-extralight text-xs">{formattedPublishDate}</p>
	<slot />
	</section>
	<Footer />
    </body>
</html>
